<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    android:padding="12dp">

    <!-- Header Compacto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:padding="8dp">

        <!-- User Info Compacta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#00FF00"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catálogo"
                    android:textSize="12sp"
                    android:textColor="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 productos"
                    android:textSize="10sp"
                    android:textColor="#00FF00"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Barra de Búsqueda Compacta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="2"
            android:background="#1A1A1A"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar productos..."
                android:textSize="11sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- Botón Filtros Compacto -->
        <LinearLayout
            android:id="@+id/btnFilter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#1E1E1E"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏷"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Botón Logout Compacto -->
        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#1E1E1E"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚪"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Filtros Rápidos Compactos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar:"
            android:textSize="10sp"
            android:textColor="#CCCCCC"
            android:layout_marginEnd="8dp" />

        <!-- Chips de filtro -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Nombre"
                android:textSize="9sp"
                android:textColor="#00FF00"
                android:background="#1A1A1A"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Precio"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:background="#2A2A2A"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Rating"
                android:textSize="9sp"
                android:textColor="#FFFFFF"
                android:background="#2A2A2A"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Products Grid - Ocupa TODO el espacio restante -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCatalog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dp" />

</LinearLayout>